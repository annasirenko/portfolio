    color: inherit;
      }
    } */
    .skills__percent{
      position: relative;
      &-measure{
        position: absolute;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
      }
    }

.old-skill {
  margin-left: 15px;
  font-size:18px;
  width: 50%;
  color: #414c63;
  @include tablets{
    width: 30%;
  }
}
  
.skill-value--edited {
  border-bottom: 1px solid transparent;
   font-size: 18px;
    text-align: center
  }





