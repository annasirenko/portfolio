.reviews__slider
  .reviews__slider-up
    h2.reviews__slider-title Что обо мне говорят
    .reviews__slider-scroll
      .button-block
        button.slider-btn.slider-btn-prev
          +icon('arrow-down', 'slider-btn-icon slider-btn-icon-prev')                        
      .button-block
        button.slider-btn.slider-btn-next
          +icon('arrow-down', 'slider-btn-icon slider-btn-icon-next')
  .reviews__slider-down
    .reviews__slider-desc
        ul.reviews__slider-list
          li.reviews__slider-item
