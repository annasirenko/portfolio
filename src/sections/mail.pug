.mail__form
  form.form
    .form__row
      .form__block
        label(for="name").form__block-title Введите ваше имя
        input.form__input.nameuser(type='text' name='name' id="name" required='' placeholder="Ковальчук Дмитрий")
        .form__input-error
      .form__block
        label(for="email").form__block-title Введите ваш email
        input.form__input.email(type='email' name='email' id="email" required='' placeholder="loftschool@study.com")
        .form__input-error
    .form__row
      .form__block.form__block-comments
        label(for="comment").form__block-title Сообщение к письму
        textarea.form__input.form__input-textarea.comments(name='comment' required='' id="comment" placeholder="Требуется Ваша помощь при создании сайта. Интересуют сроки и цена вопроса")
        .form__input-error
    .form__row.form__row-btn
      .form__btn                          
        button#order.btn(type='submit') Отправить