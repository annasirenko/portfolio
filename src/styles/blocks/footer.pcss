.socials__link{
  padding: 10px 10px;
  border-radius: 50%;
  border: 1px solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: .3s linear;
  &:hover{
    border-color: $orange;
    .socials__icon{
      fill: $orange;
    }
  }
  
