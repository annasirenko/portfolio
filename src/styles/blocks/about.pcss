.about__content{
  /* height: 100vh;
  min-height: 650px; */
  display: flex;
  align-items: center;
  justify-content: center;
  @include tablets{
    flex-direction: column;
  }
}

.about{
  position: relative;
  z-index: 1;
  padding: 205px 160px;
  @include desktop{
    padding: 205px 0;
}
@include tablets{
  padding: 6.8125rem 32px;
}

@include phones{
  padding: 100px 14px 0;

}

}

.about__container{
  max-width: 953px;
}

.about__main{
  @include tablets{
    margin-bottom: 46px;
    
  }
}
